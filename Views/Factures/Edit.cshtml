@model BillBucket.Models.Facture

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Facture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdClient" class="control-label"></label>
                <select asp-for="IdClient" class="form-control" asp-items="ViewBag.IdClient"></select>
                <span asp-validation-for="IdClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoFacture" class="control-label"></label>
                <input asp-for="NoFacture" class="form-control" />
                <span asp-validation-for="NoFacture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEmission" class="control-label"></label>
                <input asp-for="DateEmission" class="form-control" />
                <span asp-validation-for="DateEmission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReglement" class="control-label"></label>
                <input asp-for="DateReglement" class="form-control" />
                <span asp-validation-for="DateReglement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>Prestations</th>
                    <th>Prix</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pre in Model.Prestations)
                {
                    <tr>
                        <td>@pre.Nom</td>
                        <td>@pre.Montant</td>
                        <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Prestations" asp-route-id="@pre.Id"> X </a></td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="btn btn-primary" asp-action="Create" asp-controller="Prestations" asp-route-idFacture="@Model.Id">Ajouter une prestation</a>
    </div>

    

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
